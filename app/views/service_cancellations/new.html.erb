<h2>Добавить отказника</h2>

<%= form_with model: @service_cancellations do |f| %>
  <div class="span6">
    <form>
      <h4>Выбор собственника<h4>
      <%= f.select :service_cancellation_id, RegisterOfOwner.order(:last_name).map { |owner_сancell|  ["#{owner_сancell.first_name}, #{owner_сancell.last_name},  #{owner_сancell.middle_name}"]  } %>
    </form>
  </div>

  <div class="field">
    <%= f.label "Имя" %><br />
    <%= f.text_field :first_name, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label "Фамилия" %><br />
    <%= f.text_field :last_name, autocomplete: "last_name" %>
  </div>

  <div class="field">
    <%= f.label "Отчество" %><br />
    <%= f.text_field :middle_name, autocomplete: "middle_name" %>
  </div>

  <div class="field">
    <%= f.label "Дата отказа" %><br />
    <%= f.date_select :date_rejection, autocomplete: "date_rejection" %>
  </div>

  <div class="actions">
    <%= f.submit "добавить" %>
  </div>

  <div class="actions">
    <%= f.submit "назад" %>
  </div>
<% end %>
