<article @class="post">
  <sectio class="post-head">
    <h2>Редактирование информации</h2>
  </sectio>

  <section class="post-summary">
    <small>
      <table>
        <tbody>
          <%= form_for @service_cancellation do |f| %>
            <div class="field">
              <%= f.label "Имя" %><br />
              <%= f.text_field :first_name, autocomplete: "first_name" %>
            </div>

            <div class="field">
              <%= f.label "Фамилия" %><br />
              <%= f.text_field :last_name, autocomplete: "last_name" %>
            </div>

            <div class="field">
              <%= f.label "Отчество" %><br />
              <%= f.text_field :middle_name, autocomplete: "middle_name" %>
            </div>

            <div class="field">
              <%= f.label "Дата отказа" %><br />
              <%= f.date_select :date_rejection, autocomplete: "date_rejection" %>
            </div>

            <div class="actions">
              <%= f.submit "Изменить" %>
            </div>

            <p class="mb-sm text-red">
              <div class="actions">
                <%= f.submit "Назад" %>
              </div>
            </p>
          <% end %>
        </tbody>
      </table>
    </small>
  </section>
</article>
