<%= link_to 'Отказ от услуги', new_servise_cancellations_path %>

<h1>Список отказавшихся от услкуги</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Имя</th>
      <th>Фамилия</th>
      <th>Отчество</th>
      <th>Дата отказа</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @register_of_owners.each do |owner| %>
      <tr>
        <td><%= owner.id %></td>
        <td><%= owner.first_name %></td>
        <td><%= owner.last_name %></td>
        <td><%= owner.middle_name %></td>
        <td><%= owner.date_rejection %></td>
        <td>
            <%= link_to 'Редактировать', class: 'btn btn-outline-primary btn-sm' %>
            <%= link_to 'Удалить',method: :delete, data: { confirm: "Вы уверены?" }, class: 'btn btn-outline-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
