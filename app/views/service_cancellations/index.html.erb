<table class="table caption-top">
  <caption>Список отказавшихся от услкуги</caption>
  <div class="btn-group btn-group-justified" role="group">
    <div class="btn-group" role="group">
      <button type="button" class="btn btn-default"><%= link_to 'Добавить отказника', new_service_cancellation_path, class: 'btn btn-success btn-sm' %></button>
    </div>
  </div>
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Имя</th>
      <th scope="col">Фамилия</th>
      <th scope="col">Отчество</th>
      <th scope="col">Дата отказа</th>
      <th scope="col">Действие</th>
    </tr>
  </thead>
  <tbody>
    <% @service_cancellations.each do |cancell| %>
      <tr>
        <th scope="row"><%= cancell.id %></th>
        <td><%= cancell.first_name %></td>
        <td><%= cancell.last_name %></td>
        <td><%= cancell.middle_name %></td>
        <time><td><%= cancell.created_at.to_date.strftime("%d.%m.%y") %></td></time>
        <td>
          <div class="btn-group btn-group-justified" role="group">
            <div class="btn-group" role="group">
              <button type="button" class="btn btn-default"><%= link_to 'Ред.', edit_service_cancellation_path(cancell), class: 'btn btn-info btn-sm' %></button>
            </div>
            <div class="btn-group" role="group">
              <button type="button" class="btn btn-default"><%= link_to 'Удалить', cancell, data: { turbo_method: "delete", turbo_confirm: "Вы уверены?" }, class: 'btn btn-outline-danger btn-sm' %></button>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
