<section class="post-head">
  <h4>РЕДАКТИРОВАНИЕ ПОЛЕЙ</h4>
</section>

<section class="post-summary">
  <small>
    <table>
      <tbody>
        <%= form_for @access_registrу  do |f| %>
          <div class="row g-3">
            <div class="col">
              <label for="inputEmail4" class="form-label">Login</label>
              <input type="text" class="form-control" placeholder="Login" <%= f.text_field :login, autocomplete: "login" %></input>
            </div>

            <div class="col">
              <label for="inputEmail4" class="form-label">Password</label>
              <input type="text" class="form-control" placeholder="Password" <%= f.text_field :password, autocomplete: "password" %></input>
            </div>
          </div>

          <div class="field">
            <%= f.label "Дата поступления заявления" %><br />
            <%= f.date_select :date_application, autocomplete: "date_application" %>
          </div>

          <div class="field">
            <%= f.label "Дата выдачи" %><br />
            <%= f.date_select :date_issue, autocomplete: "date_issue" %>
          </div>

          <p class="mb-sm text-red">
            <div class="actions">
              <%= f.submit "Изменить", class: 'btn btn-light' %>
            </div>
          </p>

          <p class="mb-sm text-red">
            <div class="actions">
              <%= f.submit "Назад", class: 'btn btn-light' %>
            </div>
          </p>
        <% end %>
      </tbody>
    </table>
  </small>
</section>
