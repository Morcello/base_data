<%= link_to 'Выдать доступ', new_access_registry_path %>

<h1>Список выданных доступов</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Login</th>
      <th>Password</th>
      <th>Дата поступления заявления</th>
      <th>Дата выдачи</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @access_registries.each do |registry| %>
      <tr>
        <td><%= registry.id %></td>
        <td><%= registry.login %></td>
        <td><%= registry.password %></td>
        <td><%= registry.date_application %></td>
        <td><%= registry.date_issue %></td>
        <td>
          <%= link_to 'Редактировать', edit_access_registry_path(registry), class: 'btn btn-outline-primary btn-sm' %>
          <%= link_to 'Удалить', registry, data: { turbo_method: "delete", turbo_confirm: "Вы уверены?" }, class: 'btn btn-outline-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
